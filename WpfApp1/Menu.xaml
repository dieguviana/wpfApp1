<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="Cadastrar Funcionário" HorizontalAlignment="Left" Margin="301,180,0,0" VerticalAlignment="Top" Click="Button_Click" FontSize="16" Height="35" Width="222" Background="#FF0095F3" Effect="{Binding Background, ElementName=button}" FontWeight="Bold" Command="{Binding ElementName=button1, Mode=OneWay}" BorderBrush="Black"/>
        <Label Content="CadCON" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" Height="40" FontSize="20" FontWeight="Bold" Foreground="#FF0095F3"/>
        <Button x:Name="button1" Content="Listar Contatos" HorizontalAlignment="Left" Margin="301,252,0,0" VerticalAlignment="Top" Click="Button_Click" FontSize="16" Height="35" Width="222" Background="#FF0095F3" BorderBrush="Black" FontWeight="Bold"/>
    </Grid>
</Window>
